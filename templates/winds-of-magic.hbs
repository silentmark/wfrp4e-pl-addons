<div>
    <h3 style="text-align: center">Wiatry Magii podczas Starcia</h3>
    <ol style="display: flex; flex-flow: row; flex-wrap: wrap; margin: 0; list-style-type: none;">
  {{#each winds as |wind i|}}
     <li data-item-id="{{wind.wind}}" style="display: flex; margin: 5px; flex-direction: column">
        <span style="text-align: center; display: inline-block; width: 60px;">{{wind.wind}}</span>
        <input class="input wind" name="{{wind.wind}}" type="text" value="{{wind.modifier}}" style="width: 60px; font-family: var(--actor-input-font-family); font-size: var(--actor-input-font-family); font-weight: var(--actor-input-font-weight); color: var(--actor-input-color); text-align: center; float: right;" />
    </li>
  {{/each}}
  </ol>
      <div style="padding: 20px;">
        <h3 style="padding-right: 5px">Złowrogie Wpływy Tzeentcha</h3>
        <input type="checkbox" name="tzeentchInfluence" value="{{tzeentchInfluence}}"/>
      </div>
</div>
